<h1>Edit Todo</h1>

<%= form_with(model: @todo, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :category_id, "Category" %>
    <%= form.collection_select :category_id, @categories, :id, :name, prompt: "Select Category" %>
  </div>

  <div class="form-group">
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 5 %>
  </div>

  <div class="form-group">
    <%= form.label :due_date %>
    <%= form.date_select :due_date, start_year: Date.today.year, end_year: Date.today.year + 5 %>
  </div>

  <%= form.submit "Update Todo", class: "button-primary" %>
<% end %>

<%= link_to "Back", todos_path, class: "button-secondary" %>
